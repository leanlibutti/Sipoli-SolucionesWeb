<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Busqueda de Couches por Nombre</h3>
      </div>
      <div class="panel-body">
			<%= form_tag '/couches/searchnombre', :method=>"get" do %>
			<form>
			<div class="form-group">
			<%= label_tag :contenido, 'Ingrese Nombre de Couch' %>
			<%= text_field_tag :contenido, '',required: true, autofocus: true, class:"form-control"%>
			</div>
			<div class="form-group">
			<%= submit_tag 'Buscar',  class: "btn btn-success btn-block" %>
			</div>
			</form>
			<% end %>
		</div>
	</div>
</div>
</div>

<%= render 'searchname' %>



