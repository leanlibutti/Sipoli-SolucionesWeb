<div class="row">
  
  <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Editar</h3>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <form>
            <div class="form-group">
              <%= f.label :name, 'Nombre' %><br />
              <%= f.text_field :name,required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:name] && !resource.errors.messages[:name].empty? %>
                <%= "El campo esta vacio o el nombre es invalido" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.label :apellido, "Apellido" %><br />
              <%= f.text_field :apellido, required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:apellido] && !resource.errors.messages[:apellido].empty? %>
                <%= "El campo esta vacio o el apellido es invalido" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.label :nacimiento, "Fecha de Nacimiento" %><br />
              <%= f.date_field :nacimiento, required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:nacimiento] && !resource.errors.messages[:nacimiento].empty? %>
                <%= "La fecha de nacimiento no es valida" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.label :edad, "Edad" %></br>
              <%= f.number_field :edad, required: true, required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:edad] && !resource.errors.messages[:edad].empty? %>
                <%= "La edad no es valida" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.label :direccion, "Direccion" %><br />
              <%= f.text_field :direccion, required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:direccion] && !resource.errors.messages[:direccion].empty? %>
                <%= "La dereccion no es valida" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.label :telefono, "Telefono" %><br />
              <%= f.telephone_field :telefono,required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:telefono] && !resource.errors.messages[:telefono].empty? %>
                <%= "El telofono no es valido" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.label :email, "Email" %><br />
              <%= f.email_field :email,required: true, autofocus: true, class:"form-control" %>
              <% if resource.errors.messages[:email] && !resource.errors.messages[:email].empty? %>
                <%= "El campo esta vacio o el email es invalido" %>
              <%end%>
            </div>

           <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :current_password, "Contraseña actual" %> <i>(Necesitamos su contraseña actual para confirmar los cambios)</i><br />
             <%= f.password_field :current_password, required: true,autocomplete: "off",class:"form-control"  %>
            </div>

            <div class="form-group">
              <%= f.label :"password", "Nueva Contraseña" %> <i>(Dejar en blanco si no desea cambiarla)</i><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
              <% if resource.errors.messages[:password_confirmation] && !resource.errors.messages[:password_confirmation].empty? %>
                <%= "La Contraseña no es valida " %>
              <%end%>
            </div>

            <div class="form-group">
              <%= f.label :"password_confirmation", "Confirmar Contraseña" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
              <% if resource.errors.messages[:password_confirmation] && !resource.errors.messages[:password_confirmation].empty? %>
                <%= "La Contraseña no es valida " %>
              <%end%>
           </div>

           <div class="actions">
            <%= f.submit "Actualizar", class: "btn btn-success btn-block" %>
            </div>
        </form>
        
        <%end%>
        
      </div>
    </div>    

  </div>
</div>