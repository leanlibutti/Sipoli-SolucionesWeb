<% if user_signed_in?%>
<div class="row">

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Subir foto</h3>
      </div>
      <div class="panel-body">

              <%= form_for(@image) do |f| %>
                <% if @image.errors.any? %>
                  <div id="error_explanation">
                  <h2><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

                  <ul>
                  <% @image.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
                </div>
              <% end %>
              <%= f.hidden_field :couch_id %>
        
               <div class="form-group">
              <%= f.label :url, "Direccion web de la foto" %><br>
              <%= f.text_field :url, required: true, class:"form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit "Subir imagen" , class: "btn btn-success btn-block" %>
              </div>
              <% end %>


      </div>
    </div>    

</div>
 
</div>
<%else%>
  <script type="text/javascript">
    window.location.href="/users/sign_in"  // put your correct path in a string here
  </script>
<% end %>